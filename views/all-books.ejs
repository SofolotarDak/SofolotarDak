<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome Icon cdn link is given below. -->
    <script src="https://kit.fontawesome.com/8b9110ef0c.js" crossorigin="anonymous"></script>
    <!-- Google Font cdn link is given below. -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <!-- Eexternal CSS link is given below. -->
    <link rel="stylesheet" href="./Css/style.css">
    <link rel="stylesheet" href="./Css/golpo-feature-kobita.css">
    <link rel="shortcut icon" type="x-icon" href="./Image/favicon (3).png">
    <title>বই সমূহ - সফলতার ডাক</title>
</head>


<%- include("layout/header") %>

    <!-- Header is finished ! -->

    <%- include("layout/success-alert") %>
        <div class="section-wrapper">

            <div class="book-section-wrapper">
                <h2 class="likhoni-heading">
                    বই সমূহ
                </h2>

                <div class="book-section">

                    <!-- Dynamyc book -->

                    <% userBooks.sort(function(a, b) { return new Date(b.post_time) - new Date(a.post_time); });
                        userBooks.forEach(book=>{
                        var storyImage=book.storyimage;
                        if (storyImage) {
                        storyImage=storyImage.replace('public','');
                        } %>

                        <div class="book-container" id="<%= book.book_name %>">

                            <div class="book-cover-image">
                                <img src="<%= storyImage %>" alt="Book Cover">
                            </div>

                            <div class="book-details">
                                <p>বই: <strong>
                                        <%= book.book_name %>
                                    </strong> </p>
                                <p>লেখকঃ <strong>
                                        <%= book.writter_name %>
                                    </strong> </p>
                                <p>বিষয়ঃ <strong>
                                        <%= book.book_subject %>
                                    </strong> </p>
                                <p class="book-description">
                                    <%= book.book_discription %>
                                </p>
                            </div>

                            <a href="<%= book.book_reading_link %>" class="book-reading-link">
                                <div class="book-reading-container">
                                    পড়ে দেখুন
                                    <i class="fa-solid fa-book-open"></i>
                                </div>
                            </a>

                            <% var book_download_link=book.book_reading_link; if (book_download_link) {
                                book_download_link=book_download_link.replace('/edit','/export?format=pdf'); } %>
                                <a href="<%= book_download_link %>" class="book-download-link">
                                    <div class="book-download-container">
                                        ডাউনলোড করুন
                                        <i class="fa-solid fa-download"></i>
                                    </div>
                                </a>

                                <% if(AdminIsLoggedIn){ %>
                                    <form action="/delete-book" method="post">

                                        <input class="d-none" name="book_id" value="<%= book._id %>" />

                                        <button class="book-delete-container" type="submit">মুছে ফেলুন <i
                                                class="fa-solid fa-trash-can"></i></button>

                                    </form>
                                    <%}%>

                        </div>

                        <% }) %>


                            <!-- Defult book -->
                            <div class="book-container">

                                <div class="book-cover-image" id="যাকাতের ফাযায়েল মাসায়েল">
                                    <img src="./Image/book-image (1).jpg" alt="Book Cover">
                                </div>

                                <div class="book-details">
                                    <p>বই: <strong>যাকাতের ফাযায়েল মাসায়েল</strong> </p>
                                    <p>লেখক: <strong>মুফতি মাহাবুবুর রহমান</strong> </p>
                                    <p>বিষয়: <strong>যাকাত</strong> </p>
                                    <p class="book-description">যাকাত ইসলামের আবশ্যকীয় পাচঁটি বিষইয়ের একটি।
                                        'যাকাতের
                                        ফাজায়েল ও মাসায়েল' বইটি
                                        'মুফতি মাহাবুবুর রহমান' কর্তৃক লিখিত অনন্য একটি বই। যার মধ্যে যাকাতের
                                        বিভিন্ন
                                        ফজিলত ও মাসায়েল সম্পর্কে কোরআন ও হাদিস ভিত্তিক আলোচনা করা হয়েছে।</p>
                                </div>

                                <a href="https://docs.google.com/document/d/1BzPcVW4jrP0sDanzuqB4tts2__h3BQsH/edit"
                                    class="book-reading-link">
                                    <div class="book-reading-container">
                                        পড়ে দেখুন
                                        <i class="fa-solid fa-book-open"></i>
                                    </div>
                                </a>

                                <a href="https://docs.google.com/document/d/1BzPcVW4jrP0sDanzuqB4tts2__h3BQsH/export?format=pdf"
                                    class="book-download-link">
                                    <div class="book-download-container">
                                        ডাউনলোড করুন
                                        <i class="fa-solid fa-download"></i>
                                    </div>
                                </a>

                                <% if(AdminIsLoggedIn){ %>
                                    <button class="book-delete-container" type="submit">মুছে ফেলুন <i
                                            class="fa-solid fa-trash-can"></i></button>
                                    <%}%>

                            </div>

                </div>
            </div>
        </div>

        <!-- Content Section is finished !  -->

        <%- include("layout/footer") %>

            <!-- Footer Section is finished ! -->


            <script src="./Js/main.js"></script>
            </body>

</html>