            </label>

            <ul>
                <li>
                    <a href="/" class="nav-btn home-btn"> হোম </a>
                </li>
                <li>
                    <a href="/likhoni" class="nav-btn"> লিখনি </a>
                </li>
                <li>
                    <a href="/all-books" class="nav-btn"> বই সমূহ </a>
                </li>

                <li>
                    <a href="/userstory" class="nav-btn"> আপনার লিখনি </a>
                </li>
                <% if(AdminIsLoggedIn){ %>
                    <li>
                        <a href="/userbook" class="nav-btn">আপনার বই </a>
                    </li>
                    <li>
                        <a href="/approval-page" class="nav-btn">অনুমোদন পৃষ্ঠা </a>
                    </li>
                    <li>
                        <a href="/all-users" class="nav-btn"> ব্যবহারকারীগণ
                        </a>
                    </li>
                    <% } %>
                        <% if(isLoggedIn){ %>
                            <li class="small-screen-login-out">
                                <a href="/logout" class="logout nav-btn"><i
                                        class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                                </a>
                            </li>
                            <% }else{ %>
                                <li class="small-screen-login-out">
                                    <a href="/register" class="register nav-btn"><i class="fa-solid fa-user-plus"></i>
                                        Register
                                    </a>
                                    <span class="devider"> / </span>
                                    <a href="/login" class="login nav-btn"><i
                                            class="fa-solid fa-arrow-right-to-bracket"></i> Login
                                    </a>
                                </li>
                                <% } %>
            </ul>

            <% if(isLoggedIn){ %>
                <li class="big-screen-login-out">
                    <a href="/logout" class="logout nav-btn"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                    </a>
                </li>
                <% }else{ %>
                    <li class="big-screen-login-out">
                        <a href="/register" class="register nav-btn"><i class="fa-solid fa-user-plus"></i> Register
                        </a>
                        <span class="devider"> / </span>
                        <a href="/login" class="login nav-btn"><i class="fa-solid fa-arrow-right-to-bracket"></i> Login
                        </a>
                    </li>
                    <% } %>
