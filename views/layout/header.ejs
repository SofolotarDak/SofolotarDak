        </div>
    </div>
    <header>
        <nav>
            <div class="logo">
                <img src="./Image/logo3.png" alt="logo" />
            </div>

            <input type="checkbox" onclick="checkBoxFunction()" id="check" />
            <label for="check" class="burger_container_label">
                <div class="small_device_menu_btn_container">
                    <div class="menu_btn_burgerUpperPart"></div>
                    <div class="menu_btn_burger" id="menu_burger_btn"></div>
                    <div class="menu_btn_burgerLowerPart"></div>
                </div>
